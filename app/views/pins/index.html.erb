<h1>Operation Guideline</h1>
<!-- Loop -->
<% @pins.each do |pin| %>

<div class="wrapper">

  <div class="header">
    <%= link_to pin.title, pin %>
  </div>

  <div class="sidebar">

  </div>

  <div class="content">
    <div class="desc">
      <p><%= pin.description %></p>
    </div>

    <div class="s-image">
      <%= link_to (image_tag pin.image.url), pin %>
    </div>

    <div class="addon">
      <p><%= pin.addon %></p>
    </div>
  </div>

  <div class="footer">
    <%= mail_to pin.user.email %>
  </div>
  <hr>
</div>
<% end %>
